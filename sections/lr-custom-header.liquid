{%- liquid
  render 'lr-custom-header', search_bar: section.settings.default_search_content
%}
{% schema %}
  {
    "name": "Custom Header",
    "settings": [
      {
        "type": "link_list",
        "id": "menu",
        "default": "main-menu",
        "label": "t:sections.header.settings.menu.label"
      },
      {
        "type": "checkbox",
        "id": "default_search_content",
        "label": "Search Bar Enable Or Disbale",
        "default": false
      }
    ]
  }
{% endschema %}