        },
        {
          "type": "text",
          "id": "sub_heading_content",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "LR Custom Grid"
    }
  ]
}
{% endschema %}
